    "version": "0.2.0",
    "configurations": [
        {
            "name": "Ansible Module: Current File",
            "type": "debugpy",
            "request": "launch",
            "program": "${file}",
            "args":[
                "${fileDirname}/args/${fileBasenameNoExtension}.json",
            ],
            "console": "integratedTerminal",
            "env": {
                "PYTHONPATH": "${workspaceFolder}",
                "AZURE_TENANT": "",
                "AZURE_CLIENT_ID": "",
                "AZURE_SECRET": ""
            }
        }
    ]
}